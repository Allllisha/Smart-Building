# Production Environment Variables Example
# Copy this file to .env.production and fill in your actual values

# Mapbox Access Token
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# API Configuration - IMPORTANT: Use Azure API endpoint
VITE_API_URL=https://smart-building-planner-api.azurewebsites.net/api

# Open-Meteo API (no key required)
VITE_WEATHER_API_URL=https://api.open-meteo.com/v1/forecast

# Azure OpenAI Configuration
VITE_AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_API_KEY
VITE_AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
VITE_AZURE_OPENAI_API_VERSION=2025-01-01-preview
VITE_AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Azure Database Configuration (Production)
DB_HOST=your-db-server.postgres.database.azure.com
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=YOUR_DB_PASSWORD
DB_PORT=5432

# Azure Container Registry
ACR_LOGIN_SERVER=your-acr.azurecr.io
ACR_USERNAME=your-acr-username
ACR_PASSWORD=YOUR_ACR_PASSWORD